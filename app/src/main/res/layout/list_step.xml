<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_step"
    android:layout_margin="@dimen/card_step_margin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <TextView
                android:id="@+id/step_number"
                style="@style/Medium.Primary"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="1"/>

            <TextView
                android:padding="@dimen/card_content_padding"
                android:gravity="center"
                style="@style/Medium.Primary"
                android:layout_weight="2"
                android:id="@+id/step_short_description"
                android:layout_width="0dp"
                tools:text="Pour the sugar."
                android:layout_height="match_parent"/>

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/step_thumbnail"
                android:layout_width="0dp"
                android:layout_height="@dimen/step_image_height"
                android:layout_weight="2"
                />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

